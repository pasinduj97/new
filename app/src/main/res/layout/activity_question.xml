<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/question_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="1/3"
        app:subtitle="Time 10s"
        app:subtitleTextColor="@color/navheadcol"
        android:background="@color/categorytextcolor"
        app:titleTextColor="@color/cardtxt"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp"
        app:navigationIcon="@drawable/backwardarrow" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:cardBackgroundColor="@color/cardbg"
        android:layout_marginTop="60dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingLeft="30dp"
                android:text="What is H20 means ?" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/opt1"
            android:elevation="10dp"
            android:background="@drawable/option_btn"
            android:layout_marginTop="370dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            >

            <TextView
                android:id="@+id/ans1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingLeft="30dp"
                android:textColor="@color/cardtxt"
                android:text="Grass" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="10dp"
            android:id="@+id/opt3"
            android:layout_marginStart="50dp"
            android:layout_marginTop="490dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/option_btn"
            >

            <TextView
                android:id="@+id/ans3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingLeft="30dp"
                android:text="Milk"
                android:textColor="@color/cardtxt" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="10dp"
            android:id="@+id/opt2"
            android:background="@drawable/option_btn"
            android:layout_marginTop="430dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            >

            <TextView
                android:id="@+id/ans2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingLeft="30dp"
                android:textColor="@color/cardtxt"
                android:text="Water" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/opt4"
            android:elevation="10dp"
            android:background="@drawable/option_btn"
            android:layout_marginTop="550dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/cardtxt"
            android:layout_marginEnd="50dp"
            >

            <TextView
                android:id="@+id/ans4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingLeft="30dp"
                android:textColor="@color/cardtxt"
                android:text="Sugar" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>